/* if - else 的嵌套		
	三个数判断大小 */

#include "stdio.h";

int main(){

	int a,b,c;
	int max = 0;

	scanf("%d %d %d",&a,&b,&c);

	if (a > b) {
		if (a>c){
			max = a;
		}else {
			max = c;
		}
	}else {
		if (b > c){
			max = b;
	}else{
		max = c;}
	}
	printf("最大数为:%d。\n",max);
}


//在if 和 else 后面加上大括号{},是一个很好的习惯
